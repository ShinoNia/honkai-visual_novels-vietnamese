  <delay t="1"></delay>
  <motion chara="097" action="show" pos="300,0" duration="1" img="素裳-动作-夺剑"></motion>
  <text>The next moment, she leapt into the air.</text>
  <bgm looptimes="0"></bgm>
  <event action="hide_ui" duration="2"></event>
  <se id="01-30女孩轻功whoosh_02"></se>
