  <delay t="0.1"></delay>
  <motion chara="096" action="move" pos="0,0" duration="30"></motion>
  <text>This time, he seemed to underestimate the girl's Hienko.</text>
  <event action="hide_ui" duration="2.5"></event>
  <motion chara="096" action="hide"></motion>
  <cg></cg>
  <motion chara="-4" action="shake" duration="0.5" range="25" direction="default"></motion>
